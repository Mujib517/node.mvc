<div class="row">
    <div class="col-md-5">

        <div class="panel panel-success">
            <div class="panel-heading">{{book.title}}</div>
            <div class="panel-body">
                <div>${{book.price}}</div>
                <div>
                    Published {{#if book.published}}
                    <input type="checkbox" checked="checked" /> {{else}}
                    <input type="checkbox" /> {{/if}}

                    <b>{{book.published}}</b>
                </div>

            </div>
            <div class="panel-footer">
                <div>{{book.lastUpdated}}</div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <form action="/books/reviews/new" method="POST">
        <div class="col-md-6">
            <div class="form-group">
                <input type="hidden" class="form-control" name="bookId" value="{{book._id}}" />
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Rating" name="rating" />
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Comment" name="comment"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Save Comment</button>
            </div>
        </div>
    </form>
</div>

<div class="row">

    {{#if book.reviews}}
    <h1>Reviews</h1>
    {{else}}
    <h2>Be the first one to review</h2>
    {{/if}} {{#each book.reviews}}
    <div>
        <h4>{{comment}}</h4>
        Rating:
        <b>{{rating}}</b>
        <div class="text-muted">{{lastUpdated}}</div>
    </div>
    <hr/> {{/each}}
</div>