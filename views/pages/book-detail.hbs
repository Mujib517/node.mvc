<div class="row">
    <div class="col-md-5">

        <div class="panel panel-success">
            <div class="panel-heading">{{book.title}}</div>
            <div class="panel-body">
                <div>${{book.price}}</div>
                <div>
                    Published 
                    
                    {{#if book.published}}
                    <input type="checkbox" checked="checked" /> 
                    
                    {{else}}
                    <input type="checkbox" /> {{/if}} 

                    <b>{{book.published}}</b>
                </div>

            </div>
            <div class="panel-footer">
                <div>{{book.lastUpdated}}</div>
            </div>
        </div>
    </div>
</div>

<div class="row">

    {{#if book.reviews}}
    <h1>Reviews</h1>
    {{/if}} 
    
    {{#each book.reviews}}
    <div>
        <h4>{{rating}}</h4>
        <p>{{comment}}</p>
        <div>{{lastUpdated}}</div>
    </div>
    {{/each}}
</div>