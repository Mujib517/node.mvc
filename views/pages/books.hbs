<script>
    function confirm() {
        var result = confirm("are you sure you want to delete?");
        return result;
    }
</script>


<h1>Books</h1>

<div class="col-md-7">
    <div class="row form-group">
        <a class="btn-danger btn" href="/books/new">Add New Book
            <i class="glyphicon glyphicon-plus"></i>
        </a>
    </div>

    {{#each books}}
    <div class="well">
        <h3>
            <a href="/books/{{_id}}">{{title}}</a>
        </h3>
        <h3 class="text-muted">$ {{price}}</h3>
        <span class="text-muted">{{lastUpdated}}</span>
        <span>{{relativeTime}}</span>
        <form method="POST" action="/books/delete/{{_id}}">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>

    </div>
    {{/each}}
</div>